                                    <li>@Html.ActionLink("Lançamento de Perdas de Produtos", "LancamentoPerdaProduto", "Operacao")</li>
                                    <li>@Html.ActionLink("Inventário de Estoque", "InventarioEstoque", "Operacao")</li>
                                </ul>
                            </li>
                            <li>
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    Relatórios
                                    <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Posição de Estoque", "PosicaoEstoque", "Relatorio")</li>
                                    <li>@Html.ActionLink("Ressuprimento", "Ressuprimento", "Relatorio")</li>
